@model IEnumerable<Northwind.Web.Models.EmployeeViewModel>
@{
    ViewBag.Title = "All employees";
}

<h2>All employees</h2>

<br />
<div class="container">
    <div class="bs-component col-md-10 col-md-offset-1">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">Title</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">City</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in this.Model)
                {
                    <tr>
                        <td class="text-center">@employee.EmployeeID</td>
                        <td class="text-center">@employee.Title</td>
                        <td class="text-center">@employee.FirstName @employee.LastName</td>
                        <td class="text-center">@employee.City, @employee.Country</td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>
